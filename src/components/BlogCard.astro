---
import { Image } from "astro:assets";
const { post } = Astro.props;
---

<div class="w-full md:h-[300px] p-3 border flex">
  <div class="w-1/3 hidden md:block">
    <a href={"b/" + post.slug}>
      {
        post.data.cardImg && (
          <Image
            class="h-full object-contai border"
            src={post.data.cardImg}
            alt="A bird sitting on a nest of eggs."
            width={300}
            height={100}
          />
        )
      }
    </a>
  </div>
  <div class="pl-5 p-3 w-full md:w-2/3">
    <div
      class="grid-cols-2 md:grid-cols-3 xl:grid-cols-5 gap-2 mb-2 hidden sm:grid"
    >
      {
        post.data.tags.map((tag: string) => {
          return (
            <div class="inline-block rounded-lg bg-black text-white px-3 py-1 text-sm w-fit">
              {tag}
            </div>
          );
        })
      }
    </div>
    <a href={"b/" + post.slug}
      ><h1 class="text-xl sm:text-3xl">{post.data.title}</h1>
    </a>
    <p>
      <small class="text-gray-400">{post.data.author} | {post.data.date}</small>
    </p>
    <p class="text-muted-foreground line-clamp-3 xl:line-clamp-6">
      {post.data.desc}
    </p>
  </div>
</div>
